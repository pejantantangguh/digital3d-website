<section>
      {% comment %} <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            {% for block in section.blocks %}
              <li data-target="#carouselExampleIndicators" data-slide-to="{{forloop.index}}" 
              {%if  forloop.index == 0 %} class="active"{%endif%}></li>
          {% endfor %}
        </ol>
        <div class="carousel-inner">
              {% for block in section.blocks %}
                  <div class="carousel-item {% if forloop.first %} active {%endif%}">
                      <img src="{{ block.settings.image | img_url:'master' }}" class="d-block w-100" alt="{{ block.settings.title }}">
                      <div class="carousel-caption d-none d-md-block">
                        <h5> {{ block.settings.title }}</h5>
                      </div>
                  </div>
            {% endfor %}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div> {% endcomment %}


<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  {% for block in section.blocks %}
  <div class="carousel-inner">
    <div class="carousel-item {%if forloop.first %} active {% endif %}">
      <img class="d-block w-100" src="{{block.settings.image | img_url:'master'}}" 
           alt="{{block.settings.title}}">
    </div>
  {% endfor %}
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</section>
{% schema %}
  {
    "name": "Image Slider",
    "settings": [
      { 
        "type": "header",
        "content": "Image Slider"
      },
      {
          "type": "text",
          "id": "title",
          "label": "heading",
          "default": "Slider Title"
      }
    ],

    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "id": "image",
            "type": "image_picker",
            "label": "Image"
          },
          {
              "id": "title",
              "type": "text",
              "label": "Image Title"
          }
        ]
      }
    ],

    "presets": [
        {
            "name": "Image Slider",
            "category": "Image"
        }
    ]
  }
        
{% endschema %}